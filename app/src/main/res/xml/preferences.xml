<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListPreference
        android:title="@string/movies_order"
        android:key="@string/pref_order_key"
        android:defaultValue="@string/pref_value_popular"
        android:entryValues="@array/pref_order_value"
        android:entries="@array/pref_order_value"/>

    <ListPreference
        android:title="@string/language"
        android:key="@string/pref_language_key"
        android:defaultValue="@string/pref_value_lang_en"
        android:entryValues="@array/pref_lang_option"
        android:entries="@array/pref_lang_value"/>

</PreferenceScreen>